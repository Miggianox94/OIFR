<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}OIFR{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/googleFonts.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/fontAwesome/css/fontawesome-all.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/custom.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body {% block bodyAttributes %}{% endblock %}>
        {% block navbar %}
            <!-- Navigation -->
            <a class="menu-toggle rounded" href="#">
                <i class="fa fa-bars"></i>
            </a>
            <nav id="sidebar-wrapper">
                {{ knp_menu_render('main') }}
            </nav>
        {% endblock %}
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block overlay %}
            <div id="overlay">
                <div id="loader"></div>
            </div>
        {% endblock %}

        {% block body %}
        {% endblock %}

        {% block footer %}
            <footer class="footer">
                <div class="container">
                    {% block footerBody %}{% endblock %}
                </div>
            </footer>
        {% endblock %}

        {% block messagePopup %}
            <div class="modal" data-easein="bounceIn" id="popupModalMessage" tabindex="-1" role="dialog" aria-labelledby="popupModalMessage" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="resultModalContent modal-content">
                        <div class="resultModalHeader modal-header">
                            <h5 class="modal-title resultModalTitle" id="popupModalMessageTitle">{% block messagePopupTitle %}Info{% endblock %}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"><i class="far fa-times-circle"></i></span>
                            </button>
                        </div>
                        <div id="messagePopupBodyId" class="modal-body">
                            {% block messagePopupBody %}
                            {% endblock %}
                        </div>
                        <div class="resultModalFooter modal-footer">
                            {#<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>#}
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.3.1.js') }}"></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('js/jquery.easing.min.js') }}"></script>
            <script src="{{ asset('js/custom.js') }}"></script>
            <script src="{{ asset('js/velocity.js') }}"></script>
            <script src="{{ asset('js/velocity.ui.js') }}"></script>
        {% endblock %}

    </body>
</html>
