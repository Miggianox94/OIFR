{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/galleryJs/blueimp-gallery.min.js') }}"></script>
    <script src="{{ asset('js/dropFiles.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/galleryCss/blueimp-gallery.min.css') }}">
{% endblock %}


{% form_theme form _self %}

{% block file_label %}
    <label for="zip_upload_file" class="inputfileCustomDragDropLabel" id="zip_upload_file_label">
        <div class="upload-drop-zone" id="drop-zone">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path>
            </svg>
            <span>Choose a file…</span>
        </div>
    </label>
{% endblock %}



{% block body %}
    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">{{ recognizepage.mainTitle }}</h1>
            {{ form(form) }}
            <h3>{{ form_errors(form.file) }}</h3>
        </div>
    </header>

{% endblock %}

{% block messagePopupBody %}
    <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
        <div class="slides"></div>
        <h3 class="title"></h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <a class="play-pause"></a>
        <ol class="indicator"></ol>
    </div>

    <div id="links">
    </div>
{% endblock %}


{% block footer %}
    {#This permits to clear parent footer#}
{% endblock %}


